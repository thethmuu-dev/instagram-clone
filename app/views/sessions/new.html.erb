<div class="container d-flex flex-column">
    <div class="row my-auto">
        <div class="col-md-4 offset-md-2">
            <%= image_tag("left_cover.png", class: "img-fluid") %>
        </div>
        <div class="col-md-4 d-flex flex-column justify-content-center p-4">
            <%= render 'layouts/notice' %>
            <div class="card rounded-0" id="auth-card">
                <div class="card-body text-center">
                    <h1 class="logo-text mb-5">Instagram</h1>
                    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %> 
                        <div class="form-group mt-2">
                            <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password, placeholder: "Password", class: "form-control" %> 
                        </div>
                        <%= f.submit "Log In", class: "btn bg-my btn-block rounded-lg my-3 font-weight-bold text-white" %>
                    <% end %>
                </div>
            </div>
            <div class="card rounded-0 mt-3">
                <div class="card-body text-center">
                    Don't have an account? <%= link_to "Sign up", signup_path %>
                </div>
            </div>
        </div>
    </div>
</div>

<%= render 'layouts/footer' %>