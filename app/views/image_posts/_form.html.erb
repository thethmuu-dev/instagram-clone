<% if @image_post.errors.any? %> 
    <div class="alert alert-warning mt-3"> 
        <ul class="mb-0"> 
        <% @image_post.errors.full_messages.each do |message| %> 
        <li><%= message %></li> 
        <% end %> 
        </ul> 
    </div> 
<% end %> 
<div class="card text-center mb-3">
    <div class="card-header card-header-my">
      <%= title %>
    </div>
    <%= form_with(model: @image_post, local: true, url: choose_new_or_edit_image) do |f| %> 
    <%= f.text_area :caption, placeholder: "Write a caption...", row: "15", class: "px-3 py-2 border-0" %>
    <hr class="mb-0">
    <div class="d-flex px-3 flex-start">
        <label class="badge badge-pill badge-light d-flex align-items-center shadow-sm p-2 my-2" for="upload-photo">
          <svg viewBox="0 0 20 20" width="25px" stroke="currentColor" fill-opacity="0" stroke-opacity="0.8" class="camera w-6 h-6"><path fill-rule="evenodd" d="M4 5a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.121-1.121A2 2 0 0011.172 3H8.828a2 2 0 00-1.414.586L6.293 4.707A1 1 0 015.586 5H4zm6 9a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path></svg>
          <span class="ml-2">Choose Photo</span>
        </label>
        <%= f.file_field :image, id: "upload-photo" %>
    </div>
    <hr class="my-0">
    <div class="p-2">
        <button type="submit" class="btn btn-block btn-my">Share</button>
    </div>
    <% end %>
</div>